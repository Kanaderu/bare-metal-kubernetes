apiVersion: v1
kind: Namespace
metadata:
  name: nfs
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: nfs
  namespace: nfs
  labels:
    app: nfs
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nfs
  template:
    metadata:
      labels:
        app: nfs
    spec:
      containers:
      - name: nfs
        image: erichough/nfs-server
#        env:
#          - name: NFS_ENABLE_KERBEROS
#            value: "1"
        volumeMounts:
          - name: shares
            mountPath: /srv
          - name: exports
            mountPath: /etc/exports
            readOnly: true
          - name: krb5conf
            mountPath: /etc/krb5.conf
            readOnly: true
          - name: modules
            mountPath: /lib/modules
            readOnly: true
        securityContext:
          capabilities:
            add:
              - SYS_ADMIN
              - SYS_MODULE
      volumes:
        - name: shares
          hostPath:
            path: /srv
            type: Directory
        - name: exports
          hostPath:
            path: "{{ nfs_config_path }}/exports"
            type: File
        - name: krb5conf
          hostPath:
            path: "{{ nfs_config_path }}/krb5.conf"
            type: File
        - name: modules
          hostPath:
            path: /lib/modules
            type: Directory
      tolerations:
        - effect: NoSchedule
          key: node-role.kubernetes.io/master
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: storagetype
                operator: In
                values:
                  - m2
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: nfs
  name: nfs-internal
  namespace: nfs
spec:
  ports:
  - name: nfs
    port: 2049
    protocol: TCP
    targetPort: 2049
  - name: sunrpc
    port: 111
    protocol: TCP
    targetPort: 111
  - name: statd
    port: 32765
    protocol: TCP
    targetPort: 32765
  - name: mountd
    port: 32767
    protocol: TCP
    targetPort: 32767
  selector:
    app: nfs
  sessionAffinity: None
  type: ClusterIP
  ipFamilyPolicy: RequireDualStack
  ipFamilies:
    - IPv4
    - IPv6
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: nfs
  annotations:
    purelb.io/service-group: servergroup-ipv4
    purelb.io/service-group: servergroup-ipv6
    purelb.io/announcing-interface: {{ ansible_facts.default_ipv6.interface }}
    purelb.io/announcing-node: {{ ansible_facts.fqdn }}
  name: nfs-lb
  namespace: nfs
spec:
  externalTrafficPolicy: Local
  ports:
  - name: nfs
    port: 2049
    protocol: TCP
    targetPort: 2049
  - name: sunrpc
    port: 111
    protocol: TCP
    targetPort: 111
  - name: statd
    port: 32765
    protocol: TCP
    targetPort: 32765
  - name: mountd
    port: 32767
    protocol: TCP
    targetPort: 32767
  selector:
    app: nfs
  sessionAffinity: None
  type: LoadBalancer
  ipFamilyPolicy: RequireDualStack
  ipFamilies:
    - IPv6
    - IPv4
