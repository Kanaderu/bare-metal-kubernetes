apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: star.{{ lan_domain }}
spec:
  # Secret names are always required.
  secretName: star.{{ lan_domain }}
  duration: 2160h # 90d
  renewBefore: 360h # 15d
  subject:
    organizations:
      - "{{ lan_tld }}"
  isCA: false
  privateKey:
    algorithm: RSA
    encoding: PKCS1
    size: 2048
  # usages:
  #   - server auth
  #   - client auth
  # At least one of a DNS Name, URI, or IP address is required.
  dnsNames:
    - '{{ lan_tld }}'
    - '*.{{ lan_tld }}'
  # Issuer references are always required.
  issuerRef:
    name: letsencrypt
    kind: ClusterIssuer