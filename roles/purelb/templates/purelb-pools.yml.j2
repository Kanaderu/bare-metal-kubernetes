apiVersion: purelb.io/v1
kind: ServiceGroup
metadata:
  name: servergroup-ipv4
  namespace: purelb
spec:
  local:
    subnet: '{{ network.ipv4.subnet }}'
    pool: '{{ network.ipv4.server_pool.start }}-{{ network.ipv4.server_pool.end }}'
    aggregation: default
---
apiVersion: purelb.io/v1
kind: ServiceGroup
metadata:
  name: servergroup-ipv6
  namespace: purelb
spec:
  local:
    subnet: '{{ network.ipv6.subnet }}'
    pool: '{{ network.ipv6.server_pool.start }}-{{ network.ipv6.server_pool.end }}'
    aggregation: default
